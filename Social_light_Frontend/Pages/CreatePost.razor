@page "/createpost"


<div class="container">
    <h3>Create a Post</h3>

    <div class="post-form">
        <IconInputTextArea Placeholder="What's on your mind?" @bind-Value="postText" />
        <button class="btn btn-primary" @onclick="CreateUserPost">Post</button>
    </div>
</div>

@code {
    private string postText = "";

    private void CreateUserPost()
    {
        // Handle post creation logic here, e.g., save the postText to a database
        // You can also clear the postText input field after creating the post
        postText = "";
    }
}
